<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <View
        android:id="@+id/idHeaderView"
        android:layout_width="415dp"
        android:layout_height="104dp"
        android:background="#1565C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintBounds" />

    <EditText
        android:id="@+id/idHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/run_fatty_run"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFAB91"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/idHeaderView"
        app:layout_constraintEnd_toEndOf="@+id/idHeaderView"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/idHeaderView"
        app:layout_constraintTop_toTopOf="@+id/idHeaderView"
        app:layout_constraintVertical_bias="0.39"
        tools:ignore="Autofill,Deprecated,LabelFor,TextContrastCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/idHeaderTextSmall"
        android:layout_width="159dp"
        android:layout_height="15dp"
        android:autoText="false"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/the_fat_shaming_workout_timer"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#EEEEEE"
        android:textSize="9sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/idHeaderView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idHeaderText"
        tools:ignore="Autofill,Deprecated,LabelFor,SmallSp,TextContrastCheck,TouchTargetSizeCheck,TextSizeCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/idBodyLayout"
        android:layout_width="419dp"
        android:layout_height="745dp"
        android:layout_marginEnd="1dp"
        android:background="#0288D1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idHeaderView"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="VisualLintBounds">

        <EditText
            android:id="@+id/idRestPeriodDurationEditText"
            android:layout_width="162dp"
            android:layout_height="53dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="84dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/rest_period_duration"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#EEEEEE"
            android:textColorHint="#EEEEEE"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/idStartStopTimerBtn"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="Autofill,TextContrastCheck" />

        <Button
            android:id="@+id/idStartStopTimerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="92dp"
            android:backgroundTint="#1565C0"
            android:text="@string/start_stop"
            android:textColor="#FFAB91"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/idWorkoutDurationEditText"
            android:layout_width="162dp"
            android:layout_height="53dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="84dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/workout_duration"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#EEEEEE"
            android:textColorHint="#EEEEEE"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/idStartStopTimerBtn"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="Autofill,TextContrastCheck" />

        <ProgressBar
            android:id="@+id/idWorkoutProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="171dp"
            android:layout_height="48dp"
            android:layout_marginStart="121dp"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="232dp"
            app:layout_constraintBottom_toTopOf="@+id/idStartStopTimerBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/idFooterView"
        android:layout_width="412dp"
        android:layout_height="59dp"
        android:background="#1565C0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintBounds" />

    <EditText
        android:id="@+id/idFooterText"
        android:layout_width="155dp"
        android:layout_height="39dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/github_com_returnmarcco"
        android:textAlignment="center"
        android:textColor="#FFAB91"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/idBodyLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/idFooterView"
        tools:ignore="Autofill,LabelFor,SmallSp,TextContrastCheck,TouchTargetSizeCheck,VisualLintBounds" />

</androidx.constraintlayout.widget.ConstraintLayout>